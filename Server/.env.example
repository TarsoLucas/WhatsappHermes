# Configurações do Servidor
PORT=8000
NODE_ENV=development

# Tempo limite para desligamento gracioso (em milissegundos)
SHUTDOWN_TIMEOUT=10000

# Banco de Dados PostgreSQL
# Para Railway: Copie a DATABASE_URL do painel da Railway
# Para local: postgresql://usuario:senha@localhost:5432/whatsapp_hermes
DATABASE_URL=postgresql://usuario:senha@host:porta/database

# Exemplo Railway:
# DATABASE_URL=postgresql://postgres:senha123@containers-us-west-1.railway.app:5432/railway